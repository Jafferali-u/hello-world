pipeline{ 
  agent any   
    environment{
        PATH = "/opt/maven3/bin:$PATH"
    }
  stages{
        stage("mevan build"){
            steps {
                sh "mvn clean package"
            }
        }
        stage("deploy"){
            sshagent(['srcjenkins']) {
                sh 'scp -o StrictHostKeyChecking=no target/*.war srcjenkins@172.31.57.87:/opt/docker/jenkinsfile-test/'
            }
        }
    }
  }
